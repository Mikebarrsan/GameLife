def seleccion_celulas():
  numero_de_clicks = int(input(clicks))
  #Aquí el usuario da los clicks necesarios y el número de clicks se guarda en numero_de_clicks
  if (numero_de_clicks%2)==0:
    #si da en total
    on()
  if (numero_de_clicks%2)!=0:
    off()
