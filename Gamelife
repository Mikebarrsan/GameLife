def detector_fin_de_juego(rejilla):
  if rejilla == TODAS LAS CÉLULAS QUIETAS:
    return "UTOPIA"
  if rejilla == TODAS LAS CÉLULAS MUERTAS:
    return "EXTINCTION"
   else:
    return "SURVIVING"

